<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shticell.client.sheethub.components.commands.components.chat.chatarea.impl.ChatAreaControllerImpl">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ToggleButton id="auto-scroll-button" fx:id="autoScrollButton" text="Auto Scroll" />
        </HBox>
        <TextArea fx:id="mainChatLinesTextArea" prefHeight="192.0" prefWidth="509.0" wrapText="true" VBox.vgrow="ALWAYS" />
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextArea fx:id="chatLineTextArea" maxHeight="50" minHeight="50" prefHeight="50.0" prefWidth="496.0" promptText="Say Something..." HBox.hgrow="ALWAYS" />
            <Button id="send-button" onAction="#sendButtonClicked" prefHeight="45.0" prefWidth="46.0" text="SEND" />
        </HBox>
    </children>
</VBox>