<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loadfilecomp.impl.LoadFileControllerImpl">
   <children>
      <Button fx:id="loadFileButton" mnemonicParsing="false" text="Load File" />
      <Label fx:id="statusLabel" text="Currently Loaded File:">
         <HBox.margin>
            <Insets left="10.0" top="5.0" />
         </HBox.margin>
      </Label>
      <TextField fx:id="fileTextField" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="262.0" promptText="Loaded file path" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="3.0" />
         </HBox.margin>
      </TextField>
      <Label text="Spreadsheet Name:">
         <HBox.margin>
            <Insets left="15.0" top="5.0" />
         </HBox.margin>
      </Label>
      <TextField fx:id="sheetNameTF" editable="false" promptText="Sheet Name">
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin>
      </TextField>
   </children>
   <padding>
      <Insets left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
